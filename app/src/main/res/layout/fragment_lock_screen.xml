<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003"
    tools:context="com.example.teamalmanac.codealmanac.LockScreenFragment">

    <TextClock
        android:id="@+id/digital_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:layout_marginTop="62dp"
        android:format12Hour="h:mm"
        android:gravity="center_vertical"
        android:textSize="90sp" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/digital_clock"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:textSize="23sp" />

    <!--Footer button layout-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_mainfocus"
        app:srcCompat="@drawable/btn_main_wtd"
        android:id="@+id/leftdrawicon"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="화면을 밀어 이동하세요"
        android:gravity="center"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/text_mainfocus" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_mainfocus"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="86dp"
        app:srcCompat="@drawable/btn_main_unlock"
        android:id="@+id/lockscreenicon" />

    <TextView
        android:text="temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_temp"
        android:layout_alignParentTop="true"
        android:textColor="#FFF"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_weather_icon"
        android:layout_alignParentTop="true"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:layout_toStartOf="@+id/text_temp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_location"
        android:text="location"
        android:layout_below="@+id/text_weather_icon"
        android:textColor="#FFF"
        android:layout_alignStart="@+id/text_weather_icon" />

    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        android:textColor="#FFF"
        android:text="Greeting"
        android:textSize="52sp"
        android:layout_alignTop="@+id/datetime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="USERNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="52sp"
        android:id="@+id/text_user_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_greeting"
        android:layout_toEndOf="@+id/leftdrawicon" />

    <TextView
        android:id="@+id/text_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:text="TODAY"
        android:layout_below="@+id/text_user_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mainfocus"
        android:textSize="30sp"
        android:textColor="#FFF"
        android:layout_marginTop="24dp"
        android:id="@+id/text_mainfocus"
        android:layout_below="@+id/text_today"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
