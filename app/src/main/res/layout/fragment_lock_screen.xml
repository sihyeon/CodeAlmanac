<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_lock_fragment"
    tools:context="com.example.teamalmanac.codealmanac.LockScreenFragment">


    <TextClock
        android:id="@+id/digital_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:format12Hour="h:mm"
        android:gravity="center_vertical"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/digital_clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        android:text="DateTime"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:gravity="center_vertical"
        android:text="GreetingMessage"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_greeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="TODAY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mainfocus"
            android:layout_marginTop="21dp"
            android:id="@+id/text_mainfocus"
            android:layout_below="@+id/text_today"
            android:layout_centerHorizontal="true" />

    <TextView
        android:text="temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_temp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_weather_icon"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/text_temp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_location"
        android:text="location"
        android:layout_below="@+id/text_weather_icon"
        android:layout_alignStart="@+id/text_weather_icon" />

</RelativeLayout>
